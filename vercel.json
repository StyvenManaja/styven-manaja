{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "admin-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "admin-frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "server.js"
    },
    {
      "src": "^/admin/(.*)$",
      "dest": "/admin-frontend/dist/index.html"
    },
    {
      "src": "^/(.*)$",
      "dest": "/views/$1"
    }
  ],
  "static": {
    "public": "public"
  }
}
